<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tarjeta">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="294dp"
        android:layout_height="187dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.171"
        app:srcCompat="@drawable/tarjeta" />

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/contorno"
        android:drawableStart="@drawable/baseline_person_24"
        android:ems="10"
        android:hint="Nombre del titular"
        android:inputType="text"
        android:minHeight="40dp"
        android:paddingLeft="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.483" />

    <EditText
        android:id="@+id/etTarjetaNumero"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/contorno"
        android:drawableStart="@drawable/baseline_credit_card_24"
        android:ems="10"
        android:hint="Numero de tarjeta"
        android:inputType="text"
        android:minHeight="40dp"
        android:paddingLeft="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.573" />

    <EditText
        android:id="@+id/etTarjetaFecha"
        android:layout_width="138dp"
        android:layout_height="45dp"
        android:background="@drawable/contorno"
        android:drawableStart="@drawable/baseline_date_range_24"
        android:ems="10"
        android:hint="Mes/AÃ±o"
        android:inputType="date"
        android:minHeight="40dp"
        android:paddingLeft="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.201"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.674" />

    <EditText
        android:id="@+id/etTarjetaaCVV"
        android:layout_width="150dp"
        android:layout_height="41dp"
        android:background="@drawable/contorno"
        android:drawableStart="@drawable/baseline_folder_open_24"
        android:ems="10"
        android:hint="CVV"
        android:inputType="number"
        android:maxLength="3"
        android:minHeight="40dp"
        android:paddingLeft="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.785"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.668" />

    <Button
        android:id="@+id/btnPagar"
        android:layout_width="190.67dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#ED1313"
        android:text="Pagar"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.81" />

</androidx.constraintlayout.widget.ConstraintLayout>